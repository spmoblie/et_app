<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_pay_main_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_padding_15"
    android:background="@color/back_color_lc_05"
    android:orientation="vertical">

    <TextView
        android:id="@+id/popup_pay_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_padding_15"
        android:layout_marginRight="@dimen/margin_padding_30"
        android:textSize="@dimen/text_size_26"
        android:textColor="@color/text_color_white"/>

    <TextView
        android:id="@+id/popup_pay_tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_padding_15"
        android:layout_marginRight="@dimen/margin_padding_30"
        android:text="@string/cancel"
        android:textSize="@dimen/text_size_20"
        android:textColor="@color/text_color_white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/margin_padding_15"
        android:background="@color/back_color_block"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/popup_pay_hint_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_pay_hint"/>
    </LinearLayout>
</RelativeLayout>
