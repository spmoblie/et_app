<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_rv_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_padding_5"
        android:paddingBottom="@dimen/margin_padding_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/set_line_vertical_bg" />

        <TextView
            android:id="@+id/main_rv_item_tv_1"
            style="@style/goods_item_tv"
            android:layout_weight="10"
            android:paddingLeft="@dimen/margin_padding_10"
            android:paddingRight="@dimen/margin_padding_30"/>

        <TextView
            android:id="@+id/main_rv_item_tv_2"
            style="@style/goods_item_tv"/>

        <TextView
            android:id="@+id/main_rv_item_tv_3"
            style="@style/goods_item_tv"
            android:layout_weight="3"
            android:paddingLeft="@dimen/margin_padding_10"/>

        <TextView
            android:id="@+id/main_rv_item_tv_4"
            style="@style/goods_item_tv"/>

        <TextView
            android:id="@+id/main_rv_item_tv_5"
            android:layout_width="@dimen/goods_delete_size"
            android:layout_height="@dimen/goods_delete_size"
            android:gravity="center"
            android:text="X"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/text_color_white"
            android:background="@color/back_color_state"/>
    </LinearLayout>

    <ImageView
        style="@style/set_line_horizontal_bg" />

</LinearLayout>
