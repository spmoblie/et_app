<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/classify_rv_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_padding_5"
        android:paddingBottom="@dimen/margin_padding_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/set_line_vertical_bg" />

        <TextView
            android:id="@+id/classify_rv_item_tv_1"
            style="@style/goods_item_tv"
            android:layout_weight="7"
            android:paddingLeft="@dimen/margin_padding_10"
            android:paddingRight="@dimen/margin_padding_30"/>

        <TextView
            android:id="@+id/classify_rv_item_tv_2"
            style="@style/goods_item_tv"/>

        <TextView
            android:id="@+id/classify_rv_item_tv_3"
            style="@style/goods_item_tv"
            android:layout_weight="2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_padding_15"
            android:src="@mipmap/icon_search"/>
    </LinearLayout>

    <ImageView
        style="@style/set_line_horizontal_bg" />

</LinearLayout>
