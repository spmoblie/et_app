<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_qr_code_main_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_padding_15"
    android:background="@color/ui_bg_color_percent_05"
    android:orientation="vertical">

    <TextView
        android:id="@+id/popup_qr_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_padding_15"
        android:layout_marginRight="@dimen/margin_padding_30"
        android:textSize="@dimen/text_size_26"
        android:textColor="@color/text_color_white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/margin_padding_15"
        android:background="@color/ui_bg_color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/popup_qr_code_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_pay_type"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_color_black"/>
    </LinearLayout>
</RelativeLayout>
