<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 通用对话框样式 -->
    <style name="MyDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/back_color_lc_10</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="login_input_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_20</item>
    </style>

    <style name="login_input_et">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_10</item>
        <item name="android:background">@drawable/shape_bg_login_edittext</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="login_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_8</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_8</item>
    </style>

    <style name="drawer_view_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_padding_15</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="goods_head_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/goods_item_tv_size</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="goods_item_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/goods_item_tv_size</item>
        <item name="android:textColor">@color/text_color_price</item>
    </style>

    <style name="bill_edit_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_15</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_15</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="bill_edit_et">
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingLeft">@dimen/margin_padding_15</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_10</item>
        <item name="android:background">@drawable/shape_bg_login_edittext</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="goods_edit_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_30</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_15</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="goods_edit_et">
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingLeft">@dimen/margin_padding_15</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_25</item>
        <item name="android:background">@drawable/shape_bg_login_edittext</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="fragment_1_right_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_10</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_10</item>
        <item name="android:paddingLeft">@dimen/margin_padding_10</item>
        <item name="android:paddingTop">@dimen/margin_padding_5</item>
        <item name="android:paddingRight">@dimen/margin_padding_10</item>
        <item name="android:paddingBottom">@dimen/margin_padding_5</item>
        <item name="android:background">@drawable/selector_text_false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/text_color_greys</item>
    </style>

    <style name="fragment_1_bottom_tv">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_15</item>
        <item name="android:padding">@dimen/margin_padding_5</item>
        <item name="android:background">@drawable/shape_bg_buttom_state_8</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/text_color_btn_w</item>
    </style>

    <style name="dialog_sale_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_15</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_15</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_15</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/text_color_dag_c</item>
    </style>

    <style name="dialog_tow_bt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/margin_padding_15</item>
        <item name="android:padding">@dimen/margin_padding_10</item>
        <item name="android:background">@drawable/shape_bg_buttom_state_8</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/text_color_btn_w</item>
    </style>

    <style name="tv_red_dot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">"*"</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/text_color_warns</item>
    </style>

    <style name="goods_edit_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_padding_05</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_15</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_15</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_15</item>
        <item name="android:background">@color/text_color_greys</item>
    </style>

    <!-- 水平分割线 -->
    <style name="set_line_horizontal_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_padding_05</item>
        <item name="android:background">@color/back_color_div_0</item>
    </style>

    <!-- 垂直分割线 -->
    <style name="set_line_vertical_bg">
        <item name="android:layout_width">@dimen/margin_padding_05</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/back_color_div_0</item>
    </style>

</resources>
