<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/ic_bg_login"
    tools:context="com.elite.inventory.activity.LoginActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="780dp"
        android:layout_height="480dp"
        android:background="@drawable/shape_bg_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_padding_30"
            android:src="@mipmap/ic_logo_elite"/>

        <ImageView
            android:id="@+id/iv_login_line"
            style="@style/set_line_horizontal_bg"
            android:background="#7FFFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/iv_login_logo"
            android:layout_marginTop="@dimen/margin_padding_20"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_login_input"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_bg_login_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_login_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.42"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintHorizontal_bias="0.15">

            <ImageView
                android:id="@+id/iv_input_data"
                style="@style/login_input_iv"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.13"
                app:layout_constraintVertical_bias="0.13"
                android:src="@mipmap/ic_input_data"/>

            <ImageView
                android:id="@+id/iv_input_work"
                style="@style/login_input_iv"
                app:layout_constraintLeft_toLeftOf="@id/iv_input_data"
                app:layout_constraintTop_toBottomOf="@id/iv_input_data"
                android:src="@mipmap/ic_input_work"/>

            <ImageView
                android:id="@+id/iv_input_user"
                style="@style/login_input_iv"
                app:layout_constraintLeft_toLeftOf="@id/iv_input_work"
                app:layout_constraintTop_toBottomOf="@id/iv_input_work"
                android:src="@mipmap/ic_input_user"/>

            <ImageView
                android:id="@+id/iv_input_password"
                style="@style/login_input_iv"
                app:layout_constraintLeft_toLeftOf="@id/iv_input_user"
                app:layout_constraintTop_toBottomOf="@id/iv_input_user"
                android:src="@mipmap/ic_input_password"/>

            <ImageView
                android:id="@+id/iv_input_petty"
                style="@style/login_input_iv"
                app:layout_constraintLeft_toLeftOf="@id/iv_input_password"
                app:layout_constraintTop_toBottomOf="@id/iv_input_password"
                android:src="@mipmap/ic_input_petty"/>

            <EditText
                android:id="@+id/et_input_data"
                style="@style/login_input_et"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.78"
                app:layout_constraintVertical_bias="0.11"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintHeight_percent="0.13"/>

            <EditText
                android:id="@+id/et_input_work"
                style="@style/login_input_et"
                app:layout_constraintLeft_toLeftOf="@id/et_input_data"
                app:layout_constraintTop_toBottomOf="@id/et_input_data"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.13"/>

            <EditText
                android:id="@+id/et_input_user"
                style="@style/login_input_et"
                app:layout_constraintLeft_toLeftOf="@id/et_input_work"
                app:layout_constraintTop_toBottomOf="@id/et_input_work"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintHeight_percent="0.13"/>

            <EditText
                android:id="@+id/et_input_password"
                style="@style/login_input_et"
                app:layout_constraintLeft_toLeftOf="@id/et_input_user"
                app:layout_constraintTop_toBottomOf="@id/et_input_user"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.13"/>

            <EditText
                android:id="@+id/et_input_petty"
                style="@style/login_input_et"
                app:layout_constraintLeft_toLeftOf="@id/et_input_password"
                app:layout_constraintTop_toBottomOf="@id/et_input_password"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintHeight_percent="0.13"/>

            <ImageView
                android:id="@+id/iv_input_work_2"
                style="@style/login_input_iv"
                android:layout_marginLeft="@dimen/margin_padding_3"
                android:layout_marginTop="@dimen/margin_padding_10"
                app:layout_constraintLeft_toRightOf="@id/et_input_work"
                app:layout_constraintTop_toBottomOf="@id/et_input_data"
                android:src="@mipmap/ic_input_work_2"/>

            <ImageView
                android:id="@+id/iv_input_password_2"
                style="@style/login_input_iv"
                android:layout_marginLeft="@dimen/margin_padding_3"
                android:layout_marginTop="@dimen/margin_padding_10"
                app:layout_constraintLeft_toRightOf="@id/et_input_password"
                app:layout_constraintTop_toBottomOf="@id/et_input_user"
                android:src="@mipmap/ic_input_password_2"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_login_number"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_login_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.38"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintHorizontal_bias="0.88">

            <TableLayout
                android:id="@+id/tl_number_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:stretchColumns="3">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_login_number_01"
                        style="@style/login_number"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/selector_number_1"/>

                    <ImageView
                        android:id="@+id/iv_login_number_02"
                        style="@style/login_number"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/selector_number_2"/>

                    <ImageView
                        android:id="@+id/iv_login_number_03"
                        style="@style/login_number"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/selector_number_3"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_login_number_04"
                        style="@style/login_number"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/selector_number_4"/>

                    <ImageView
                        android:id="@+id/iv_login_number_05"
                        style="@style/login_number"
                        android:src="@drawable/selector_number_5"/>

                    <ImageView
                        android:id="@+id/iv_login_number_06"
                        style="@style/login_number"
                        android:src="@drawable/selector_number_6"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_login_number_07"
                        style="@style/login_number"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/selector_number_7"/>

                    <ImageView
                        android:id="@+id/iv_login_number_08"
                        style="@style/login_number"
                        android:src="@drawable/selector_number_8"/>

                    <ImageView
                        android:id="@+id/iv_login_number_09"
                        style="@style/login_number"
                        android:src="@drawable/selector_number_9"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_login_number_dot"
                        style="@style/login_number"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/selector_number_dot"/>

                    <ImageView
                        android:id="@+id/iv_login_number_00"
                        style="@style/login_number"
                        android:src="@drawable/selector_number_0"/>

                    <ImageView
                        android:id="@+id/iv_login_number_quit"
                        style="@style/login_number"
                        android:src="@drawable/selector_number_quit"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/tl_number_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tl_number_left"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_login_number_delete"
                        style="@style/login_number"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/selector_number_delete"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_login_number_clear"
                        style="@style/login_number"
                        android:src="@drawable/selector_number_clear"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_login_number_enter"
                        style="@style/login_number"
                        android:src="@drawable/selector_number_enter"/>
                </TableRow>
            </TableLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
