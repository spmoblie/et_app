<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_bg"
    android:padding="0dp">

    <ImageButton
        android:id="@+id/dialog_sale_close"
        android:layout_width="@dimen/margin_padding_50"
        android:layout_height="@dimen/margin_padding_50"
        android:src="@mipmap/ic_delete"
        android:scaleType="center"
        android:background="@color/back_color_lc_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/dialog_sale_title"
        style="@style/dialog_sale_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_sale_show"
        style="@style/dialog_sale_tv"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_33"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_sale_title" />

    <TextView
        android:id="@+id/dialog_sale_total"
        style="@style/dialog_sale_tv"
        android:textColor="@color/text_color_debar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_sale_show" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/dialog_sale_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_sale_total"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TableLayout
            android:id="@+id/tl_number_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:stretchColumns="3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/dialog_iv_number_01"
                    style="@style/login_number"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp"
                    android:src="@mipmap/ic_number_01_1"/>

                <ImageView
                    android:id="@+id/dialog_iv_number_02"
                    style="@style/login_number"
                    android:layout_marginTop="0dp"
                    android:src="@mipmap/ic_number_02_1"/>

                <ImageView
                    android:id="@+id/dialog_iv_number_03"
                    style="@style/login_number"
                    android:layout_marginTop="0dp"
                    android:src="@mipmap/ic_number_03_1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/dialog_iv_number_04"
                    style="@style/login_number"
                    android:layout_marginLeft="0dp"
                    android:src="@mipmap/ic_number_04_1"/>

                <ImageView
                    android:id="@+id/dialog_iv_number_05"
                    style="@style/login_number"
                    android:src="@mipmap/ic_number_05_1"/>

                <ImageView
                    android:id="@+id/dialog_iv_number_06"
                    style="@style/login_number"
                    android:src="@mipmap/ic_number_06_1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/dialog_iv_number_07"
                    style="@style/login_number"
                    android:layout_marginLeft="0dp"
                    android:src="@mipmap/ic_number_07_1"/>

                <ImageView
                    android:id="@+id/dialog_iv_number_08"
                    style="@style/login_number"
                    android:src="@mipmap/ic_number_08_1"/>

                <ImageView
                    android:id="@+id/dialog_iv_number_09"
                    style="@style/login_number"
                    android:src="@mipmap/ic_number_09_1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/dialog_iv_number_dot"
                    style="@style/login_number"
                    android:layout_marginLeft="0dp"
                    android:src="@mipmap/ic_number_dot_1"/>

                <ImageView
                    android:id="@+id/dialog_iv_number_00"
                    style="@style/login_number"
                    android:src="@mipmap/ic_number_00_1"/>

                <ImageView
                    android:id="@+id/dialog_iv_number_000"
                    style="@style/login_number"
                    android:src="@mipmap/ic_number_00_0"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tl_number_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tl_number_left"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/dialog_iv_number_delete"
                    style="@style/login_number"
                    android:layout_marginTop="0dp"
                    android:src="@mipmap/ic_number_delete_1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/dialog_iv_number_clear"
                    style="@style/login_number"
                    android:src="@mipmap/ic_number_clear_1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/dialog_iv_number_enter"
                    style="@style/login_number"
                    android:src="@mipmap/ic_number_enter_0"/>
            </TableRow>
        </TableLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>