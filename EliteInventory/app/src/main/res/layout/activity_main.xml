<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color_appui">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_layout_height"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/drawer_view"
            android:layout_width="@dimen/item_layout_width"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/back_color_lc_05">

            <TextView
                android:id="@+id/drawer_tv_1"
                style="@style/drawer_view_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/item_layout_height"
                android:text="@string/main_item_01"/>


            <TextView
                android:id="@+id/drawer_tv_2"
                style="@style/drawer_view_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/drawer_tv_1"
                android:text="@string/main_item_02"/>

            <TextView
                android:id="@+id/drawer_tv_3"
                style="@style/drawer_view_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/drawer_tv_2"
                android:text="@string/main_item_03"/>

            <TextView
                android:id="@+id/drawer_tv_4"
                style="@style/drawer_view_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/drawer_tv_3"
                android:text="@string/main_item_04"/>

            <TextView
                android:id="@+id/drawer_tv_5"
                style="@style/drawer_view_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/drawer_tv_4"
                android:text="@string/main_item_05"/>

            <TextView
                android:id="@+id/drawer_tv_6"
                style="@style/drawer_view_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/drawer_tv_5"
                android:text="@string/main_item_06"/>


            <TextView
                android:id="@+id/drawer_tv_7"
                style="@style/drawer_view_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/drawer_tv_6"
                android:text="@string/main_item_07"/>


            <TextView
                android:id="@+id/drawer_tv_8"
                style="@style/drawer_view_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/drawer_tv_7"
                android:text="@string/main_item_08"/>


            <TextView
                android:id="@+id/drawer_tv_9"
                style="@style/drawer_view_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/drawer_tv_8"
                android:text="@string/main_item_09"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.DrawerLayout>

    <ImageView
        android:id="@+id/bt_drawer"
        android:layout_width="@dimen/item_layout_width"
        android:layout_height="@dimen/item_layout_height"
        android:src="@mipmap/ic_more"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_padding_15"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/text_color_title"/>

</FrameLayout>