<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="0dp" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_margin_default"
        android:gravity="center"
        android:paddingLeft="@dimen/screen_margin_default"
        android:paddingRight="@dimen/screen_margin_default"
        android:textColor="@color/text_color_title"
        android:textSize="@dimen/text_size_18"
        android:visibility="gone" />

    <EditText
        android:id="@+id/dialog_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/screen_margin_default"
        android:layout_marginTop="@dimen/screen_margin_default"
        android:layout_marginRight="@dimen/screen_margin_default"
        android:gravity="center"
        android:padding="@dimen/screen_margin_default"
        android:background="@drawable/shape_bg_border_state_8"
        android:textColor="@color/text_color_conte"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_button_cancel"
            style="@style/dialog_tow_bt"
            android:background="@drawable/shape_bg_border_debar_8"
            android:text="@string/cancel"
            android:textColor="@color/text_color_btn_b" />

        <Button
            android:id="@+id/dialog_button_confirm"
            style="@style/dialog_tow_bt"
            android:text="@string/confirm" />
    </LinearLayout>

</LinearLayout>