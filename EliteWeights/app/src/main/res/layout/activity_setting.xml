<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_padding_10"
    android:background="@color/back_color_appui"
    android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <Spinner
        android:id="@+id/setting_sp_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_30"
        android:background="@drawable/shape_frame_bg_app_hollow_4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting_tv_test"
            style="@style/setting_txt"
            android:text="@string/setting_test_result"/>

        <TextView
            android:id="@+id/setting_tv_test_result"
            style="@style/setting_txt"
            android:layout_toRightOf="@+id/setting_tv_test"
            android:textColor="@color/text_color_redss"/>

        <Button
            android:id="@+id/setting_bt_test_start"
            style="@style/setting_btn"
            android:text="@string/setting_test_start"/>
    </RelativeLayout>

    <Spinner
        android:id="@+id/setting_sp_baud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_10"
        android:background="@drawable/shape_frame_bg_app_hollow_4"/>

</LinearLayout>
